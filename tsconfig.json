{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "target": "esnext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "server.ts",
    "__test__/**/*.ts",
  ],
}
